{{#if posts.length}}
<section>
    <h2>All Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            <h2>{{post.title}}</h2>
            <p>{{post.body}}</p>
            <a class="edit-link" href="/dashboard/edit/{{post.id}}"></a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}